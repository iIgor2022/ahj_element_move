{
    "extends": ["airbnb-base", "prettier"],
    "env": {
      "es2021": true,
      "browser": true,
      "jest": true
    },
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": ["error"],
      "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
      "import/no-extraneous-dependencies": [
        "error", {
          "devDependencies": [
            "webpack.common.js",
            "webpack.dev.js",
            "webpack.prod.js"
          ]
        }
      ]
    }
  }
